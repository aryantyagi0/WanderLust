<% layout("/layouts/boilerplate") %>
<div class="row">
  <div class="col-8 offset-2">
    <h3>Create a New Listing</h3>
    <form method="POST" action="/listings"  novalidate class="needs-validation ">
      <!-- for sending file -->
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input name="listing[title]" placeholder="enter title" type="text" class="form-control" required />
        <!-- bootstrap class for success -->
        <div class="valid-feedback">Title Looks Good</div>
      </div>
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea name="listing[description]" placeholder="enter description" class="form-control" required></textarea>
        <div class="invalid-feedback">please enter valid description</div>
      </div>
      <div class="mb-3">
        <label for="image" class="form-label">Image link</label>
        <input name="listing[image]" placeholder="enter image URL/Link" type="text" class="form-control" />
      </div>
      <!-- <div class="mb-3">
        <label for="image" class="form-label">Upload Listing Image</label>
        <input name="listing[image]" placeholder="enter image URL/Link" type="file" class="form-control" />
      </div> -->
      <div class="row">
        <div class="col-md-4 mb-3">
          <label for="price" class="form-label">Price</label>
          <input name="listing[price]" placeholder="enter price" type="number" class="form-control" required/>
          <div class="invalid-feedback">please enter valid price</div>
        </div>
        <div class="col-md-8 mb-3">
          <label for="country" class="form-label">Country</label>
          <input name="listing[country]" placeholder="enter country" type="text" class="form-control" required />
          <div class="invalid-feedback">please enter valid country</div>
        </div>
      </div>
      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input name="listing[location]" placeholder="enter location" type="text" class="form-control" required/>
        <div class="invalid-feedback">please enter valid location</div>
      </div>
      <br /><br />
      <button class="btn btn-dark add-btn">Add</button>
      <br /><br />
    </form>
  </div>
</div>
